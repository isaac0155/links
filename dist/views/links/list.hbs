<div class="container p-4">
    <div class="text-center p-3 mb-4">
        <h1>Mis Enlaces</h1>
    </div>
    <div class="row">
        {{#each links}}
            <div class="col-md-3 mb-3 ">
                {{#if publico}}
                    <div class="card text-center border-info">
                    <div class="card-header text-bg-info">Link Público</div>
                {{else}}
                    <div class="card text-center">
                {{/if}}
                    <div class="card-body">
                        <a href="{{url }} " target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-s">
                            {{description}}
                        </p>
                        <p class="text-muted">{{timeago created_at }}</p>
                        <a href="/links/delete/{{id}}" class="btn btn-danger"> Borrar Link</a>
                        <a href="/links/edit/{{id}}" class="btn btn-secondary">Editar</a>
                        <div class="form-check form-switch">
                        </div>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay Enlaces guardados aún.</p>
                    <a href="/links/add" class="btn btn-success">Crea uno.</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>