<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card-header text-center">
                <h3>Registrarse</h3>
            </div>
            <div class="card-body">
                <form action="/signup" method="post">
                    <div class="form-group">
                         <label for="" class="form-label">Nombre Completo</label>
                        <input type="text" name="fullname" placeholder="Nombre Completo" class="form-control" autofocus required>
                    </div>
                    <div class="form-group">
                         <label for="" class="form-label">Crear nombre de Usuario.</label>
                        <input type="text" name="username" id="user" placeholder="Nombre de Usuario" class="form-control" required>
                        <div class="invalid-feedback" id="invalid">
                        </div>
                        <div class="valid-feedback">
                            Este nombre de usuario está libre.
                        </div>
                    </div>
                    <div class="form-group">
                         <label for="" class="form-label">Crear contraseña.</label>
                        <input type="password" name="password" placeholder="Contraseña" class="form-control" required>
                    </div>
                    <div class="form-group d-grid gap-2" >
                        <button class="btn btn-success btn-blok" id="btn" disabled>Registrarse</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<script src="/sockets/signup/sockets.js"></script>

